<%- include('../partials/header', { title: title }) %>

<div class="row mb-4">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center">
      <h1>
        <i class="fas fa-calendar-alt"></i>
        <%= isNew ? 'Create Scheduled Scan' : 'Edit Scheduled Scan' %>
      </h1>
      <a href="/scheduler" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Scheduled Scans
      </a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">
          <%= isNew ? 'Create a New Scheduled Scan' : 'Edit Scheduled Scan' %>
        </h5>
      </div>
      <div class="card-body">
        <form action="<%= isNew ? '/scheduler' : `/scheduler/${scan.id}?_method=PUT` %>" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Scan Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter a descriptive name" value="<%= scan.name %>" required>
          </div>
          
          <div class="mb-3">
            <label for="hosts" class="form-label">Hosts to Scan</label>
            <textarea class="form-control" id="hosts" name="hosts" rows="5" placeholder="Enter hostnames or IP addresses (one per line, or comma-separated)" required><%= typeof scan.hosts === 'string' ? scan.hosts : scan.hosts.join('\n') %></textarea>
            <div class="form-text">Enter multiple hosts separated by commas, semicolons, or newlines</div>
          </div>
          
          <div class="mb-3">
            <label for="ports" class="form-label">Ports to Scan</label>
            <input type="text" class="form-control" id="ports" name="ports" placeholder="443, 8443" value="<%= typeof scan.ports === 'string' ? scan.ports : scan.ports.join(', ') %>" required>
            <div class="form-text">Enter ports separated by commas (e.g., 443, 8443, 4443)</div>
          </div>
          
          <div class="mb-3">
            <label for="frequency" class="form-label">Scan Frequency</label>
            <select class="form-select" id="frequency" name="frequency" required>
              <option value="hourly" <%= scan.frequency === 'hourly' ? 'selected' : '' %>>Hourly</option>
              <option value="daily" <%= scan.frequency === 'daily' ? 'selected' : '' %>>Daily</option>
              <option value="weekly" <%= scan.frequency === 'weekly' ? 'selected' : '' %>>Weekly</option>
              <option value="monthly" <%= scan.frequency === 'monthly' ? 'selected' : '' %>>Monthly</option>
            </select>
            <div class="form-text">How often to run this scan</div>
          </div>
          
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="active" name="active" <%= scan.active ? 'checked' : '' %>>
            <label class="form-check-label" for="active">Active</label>
            <div class="form-text">Uncheck to disable this scheduled scan</div>
          </div>
          
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save"></i> <%= isNew ? 'Create' : 'Update' %> Scheduled Scan
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
